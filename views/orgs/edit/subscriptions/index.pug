extends ../layout

block main-content
  .col-lg-9
    .row
      .listing-header
        h2
          a(href='create').float-right + Create
      each subscription in subscriptions
        .col-lg-4.col-md-6.mb-4
            .card.h-100
              a(href=`${subscription.id}/`)
                img.card-img-top(src='http://placehold.it/700x400')
              .card-body
                h4.card-title
                  a(href=`${subscription.id}/`) #{subscription.name}
                h5 #{formatPrice(subscription.price)}
                p.card-text
                  | #{subscription.description}
