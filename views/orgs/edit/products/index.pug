extends ../layout

block main-content
  .col-lg-9
    .row
      .listing-header
        h2
          a(href='create').float-right + Create
      each product in products
        .col-lg-4.col-md-6.mb-4
            .card.h-100
              a(href=`${product.id}/`)
                img.card-img-top(src=product.image)
              .card-body
                h4.card-title
                  a(href=`${product.id}/`) #{product.name}
                h5 #{formatPrice(product.price)}
                p.card-text
                  | #{product.description}
